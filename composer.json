{
  "name": "mediaca/bitrix-crossposting",
  "description": "Модуль кросспостинга для Битрикс, выполняет автоматический постинг в Телеграм и ВКонтакте.",
  "type": "bitrix-d7-module",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "composer/installers": "^2.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.68",
    "rector/rector": "^2.0"
  },
  "scripts": {
    "cs-check": "php-cs-fixer check",
    "cs-fix": "php-cs-fixer fix",
    "rector-check": "rector --dry-run",
    "rector-fix": "rector"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "extra": {
    "installer-name": "crossposting"
  }
}
